@model SearchForDriversWebApp.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login Page";
}


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="tab" role="tabpanel">
                <h2 class="text-center">Вхід</h2>
                <div role="tabpanel" class="tab-pane fade in active" id="Section1">
                    <form class="form-horizontal" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label label asp-for="Email">Email</label>
                            <input type="text" asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" />
                        </div>
                        <div class="form-group">
                            <label label asp-for="Password">Password</label>
                            <input type="password" asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Увійти</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
